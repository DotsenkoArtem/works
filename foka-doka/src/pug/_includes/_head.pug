//  Basic Page Needs ==============================================
meta(charset="UTF-8")
title= page ? page.title : 'Укажите название страницы'
meta(name="description", content= (page) ? page.descr : 'Укажите описание страницы')
meta(name="author", content= (page) ? page.author : 'John Doe')
meta(name="robots", content="noindex, nofollow")
meta(name="theme-color", content= (themeColor) ? themeColor : '#000')


|
|
//  Fonts preload ==================================================
//- Перебор всех наименований шрифтов, указанных в переменной fontspreload файла _vars.pug
each val in fontsPreload
  link(rel="preload" as="font" href=`fonts/${val}` type="font/woff2" crossorigin="anonymous")


|
|
//  Mobile Specific Metas ==================================================
meta(name="viewport", content="width=device-width, initial-scale=1, shrink-to-fit=no")


